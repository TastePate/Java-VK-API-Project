<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="models.User">
        <table name="users_from_groups" schema="public" catalog="postgres"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="vkid">
                <column name="vkid" precision="-1"/>
            </basic>
            <basic name="firstName">
                <column name="first_name"/>
            </basic>
            <basic name="lastName">
                <column name="last_name"/>
            </basic>
            <basic name="country">
                <column name="country" nullable="false"/>
            </basic>
            <basic name="city">
                <column name="city" nullable="false" precision="-1"/>
            </basic>
            <basic name="sex">
                <column name="sex" nullable="false" precision="-1"/>
            </basic>
            <basic name="groupId">
                <column name="group_id" nullable="false" precision="-1"/>
            </basic>
            <many-to-one name="usersGroupsByGroupId" optional="true" target-entity="models.Group">
                <join-column name="group_id" nullable="false" referenced-column-name="id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
